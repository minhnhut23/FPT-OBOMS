shape: sequence_diagram

User: {
  shape: image
  width: 50
  height: 60
  icon: https://upload.wikimedia.org/wikipedia/commons/5/5b/Robustness_Diagram_Actor.svg
}

application: Web application
apiGateway: ApiGateway
AuthController: AuthController
AuthRepository: AuthRepository
AuthDAO: AuthDAO
Supabase: "Supabase"

DB: "DB" {
  shape: cylinder
}

# User registration sequence
loop  { 
  class: frame
  User -> application.post: "1. Enter credentials and submit register form"
  application.post -> application.post.get: "2. Check empty or \n invalid input"
  application.post -> User: "3. Show validation message" {class: return arrow}      
    
}  
 
application -> apiGateway.post: "4. Forward registration request"
apiGateway -> AuthController.post: "5. Create new account"
AuthController -> AuthRepository.post: "6. Forward to repository"
AuthRepository -> AuthDAO.post: "7. Forward to DAO"
AuthDAO.post -> Supabase.post: "8. Validate user and password"
Supabase.post-> DB.insert: "9. Insert new account record"
DB.insert -> Supabase.post: "10. Return result"
Supabase.post -> AuthDAO.post: "11. Return result" {class: return arrow}
AuthDAO.post -> AuthRepository.post: "12. Forward result" {class: return arrow}
AuthRepository.post -> AuthController.post: "13. Return result" {class: return arrow}


alt: "alt" {
  class: frame
  Registration successful: "[Registration successful]" {
    AuthController.post -> apiGateway.post: "13.1. Send success status to frontend" {class: return arrow}
    apiGateway.post -> application.post: "13.1.1. Return success status" {class: return arrow}
    application.post -> User: "13.1.2. Display registration success message" {class: return arrow}
  }
  Registration failed: "[Registration failed]" { 
    AuthController.post -> apiGateway.post: "13.2. Send error status to frontend" {class: return arrow}
    apiGateway.post -> application.post: "13.2.1. Return error status" {class: return arrow}
    application.post -> User: "13.2.2. Display registration error message" {class: return arrow}
  }
}
